<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ayala"

        android:orientation="vertical"> <!--QUEZONMEMORIALCIRCLE -->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="#ecf0f1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:text="About"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="The UP Ayala Land TechnoHub is a PEZA-accredited IT park located along Commonwealth Avenue."
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:text="Contact"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:text="0917 515 0171"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="Commonwealth Avenue, Barangay U.P. Campus, Quezon City"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:text="Reviews"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />


        <RelativeLayout
            android:id="@+id/hiders"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:background="#BEFFB6"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="1"

            >

            <TextView
                android:id="@+id/SXXXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="SUGGESTIONS:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000" />

            <Button
                android:id="@+id/p1"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/SXXXX"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="#27ae60"
                android:onClick="p1"
                android:text="Vargas Musuem"
                android:textColor="#fff" />


            <Button
                android:id="@+id/p2"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/p1"
                android:layout_below="@+id/p1"
                android:layout_marginTop="10dp"
                android:background="#27ae60"
                android:onClick="p2"
                android:text="Parish of Holy Sacrifice"
                android:textColor="#fff" />

            <Button
                android:id="@+id/p3"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/p2"
                android:layout_below="@+id/p2"
                android:layout_marginTop="10dp"
                android:background="#27ae60"
                android:onClick="p3"
                android:text="Ateneo Art Gallery"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/SXXXX"
                android:gravity="center"
                android:text="These are the suggested places to go:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

        </RelativeLayout>


        <Button
            android:id="@+id/ad"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="1dp"
            android:background="#27ae60"
            android:onClick="artadd"
            android:text="add this destination"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:background="#27ae60"
            android:text="Delete this Destination"
            android:textColor="#fff" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView7"
            android:isIndicator="true"

            android:rating="4.7"
            android:scaleX="1"
            android:scaleY="1" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:src="@null"
        android:background="#fff">
        <!--  <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/imageView"
              android:layout_gravity="center"
              android:scaleType="center"
              android:background="@drawable/edsav2"/> -->
    </LinearLayout>



</LinearLayout>